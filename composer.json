{
    "name": "fkrzski/php-steam-api",
    "description": "A modern PHP library for interacting with Steam Web API",
    "keywords": ["php", "steam", "api", "web-api", "gaming", "saloon"],
    "license": "MIT",
    "authors": [
        {
            "name": "Filip Krzy≈ºanowski",
            "email": "filip.krzyzanowski@protonmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "saloonphp/rate-limit-plugin": "^2.0",
        "saloonphp/saloon": "^3.5"
    },
    "require-dev": {
        "jonpurvis/lawman": "^4.1",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Fkrzski\\SteamApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --exactly=100 --compact",
        "test:lint": "pint --test",
        "test:unit": "pest --coverage --exactly=100",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "code-quality": [
            "@lint",
            "@refactor"
        ]
    }
}
